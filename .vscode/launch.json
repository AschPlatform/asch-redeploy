{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/index.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Run mocha",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "stopOnEntry": false,
      "args": [ "test/index.js" ],
      "cwd": "${workspaceFolder}/",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": null
      }
    }
  ]
}